  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinmordasiewicz/f5xc-cloudstatus-mcp.git"
  },
  "homepage": "https://github.com/robinmordasiewicz/f5xc-cloudstatus-mcp#readme",
